@model IEnumerable<ShoppingDomain.Models.Product>

@{
    ViewData["Title"] = "Товари";
}

<h1>Товари</h1>

@if (TempData["DeleteError"] != null)
{
    <div class="alert alert-danger">
        @TempData["DeleteError"]
    </div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Створити новий</a>
    <a asp-action="ExportToExcel" class="btn btn-success">Експорт в Excel</a>
    <a asp-action="Import" class="btn btn-warning">Імпорт з Excel</a>
    <a asp-action="ExportToWordOpenXml" class="btn btn-secondary">Експорт в .docx</a>
    <a asp-action="ImportDocx" class="btn btn-warning">Імпорт з .docx</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.BrandName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
