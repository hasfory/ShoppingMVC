@model ShoppingDomain.Models.Order

@{
    ViewData["Title"] = "Створити";
}

<h1>Створити</h1>

<h4>Замовлення</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Номер транзакції</label>
                <select asp-for="TransactionNumber" class="form-control" asp-items="ViewBag.TransactionNumbers">
                    <option value="">Оберіть номер транзакції</option>
                </select>
                <span asp-validation-for="TransactionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShoppingCartId" class="control-label"></label>
                <select asp-for="ShoppingCartId" class ="form-control" asp-items="ViewBag.ShoppingCartId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до переліку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
