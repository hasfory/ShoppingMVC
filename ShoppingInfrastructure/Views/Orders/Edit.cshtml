@model ShoppingDomain.Models.Order

@{
    ViewData["Title"] = "Редагувати";
}

<h1>Редагувати</h1>

<h4>Замовлення</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateOfOrdering" class="control-label"></label>
                <input asp-for="DateOfOrdering" class="form-control" />
                <span asp-validation-for="DateOfOrdering" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionNumber" class="control-label"></label>
                <input asp-for="TransactionNumber" class="form-control" />
                <span asp-validation-for="TransactionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShoppingCartId" class="control-label"></label>
                <select asp-for="ShoppingCartId" class="form-control" asp-items="ViewBag.ShoppingCartId"></select>
                <span asp-validation-for="ShoppingCartId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до переліку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
