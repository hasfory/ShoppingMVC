@model ShoppingDomain.Models.ApplicationUser

@{
    ViewData["Title"] = "Видалити";
}

<h1>Видалити</h1>

<h3>Впевнені, що справді хочете це видалити?</h3>
<div>
    <h4>Користувач</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneOrEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneOrEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameSurname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameSurname)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button class="btn btn-danger" type=" submit" class="btn btn-danger">Видалити</button>
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </form>
</div>
