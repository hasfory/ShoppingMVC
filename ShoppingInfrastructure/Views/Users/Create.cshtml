@model ShoppingDomain.Models.User

@{
    ViewData["Title"] = "Додати";
}

<h1>Додати</h1>

<h4>Користувач</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhoneOrEmail" class="control-label"></label>
                <input asp-for="PhoneOrEmail" class="form-control" />
                <span asp-validation-for="PhoneOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameSurname" class="control-label"></label>
                <input asp-for="NameSurname" class="form-control" />
                <span asp-validation-for="NameSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до переліку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
